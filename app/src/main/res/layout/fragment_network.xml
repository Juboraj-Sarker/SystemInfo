<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.juborajsarker.systeminfo.fragment.device.NetworkFragment">



   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <com.google.android.gms.ads.AdView
               android:id="@+id/adView1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               ads:adSize="SMART_BANNER"
               android:layout_gravity="center"
               ads:adUnitId="@string/banner_home_footer_1"
               android:layout_marginTop="105dp">
           </com.google.android.gms.ads.AdView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Data Connection"
                       android:layout_weight="1"
                       android:textColor="@color/textColorBlack"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_connection_type"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:layout_weight="1"
                       android:textColor="@color/textColorBlack"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/highLight">

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Data Type"
                       android:layout_weight="1"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_data_type"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>


           <LinearLayout
               android:id="@+id/link_speed_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Link Speed"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_link_speed"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>



           <LinearLayout
               android:id="@+id/ssid_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/highLight">

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Wifi Name"
                       android:layout_weight="1"
                       android:textColor="@color/textColorBlack"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_ssid"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>


           <LinearLayout
               android:id="@+id/network_type_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/network_type_container"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Network Type"
                       android:layout_weight="1"
                       android:textColor="@color/textColorBlack"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_network_type"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>


           <LinearLayout
               android:id="@+id/ip_address_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/highLight">

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="IP Address"
                       android:layout_weight="1"
                       android:textColor="@color/textColorBlack"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_ip_address"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>

           <LinearLayout
               android:id="@+id/bssid_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="BSSID"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_bssid"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>



           <LinearLayout
               android:id="@+id/mac_address_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/highLight">

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="MAC Address"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_mac_address"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>







           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Download Speed"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_download_speed"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/textColorBlack"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>






           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/highLight">

                   <TextView

                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Upload Speed"
                       android:layout_weight="1"
                       android:textColor="@color/textColorBlack"
                       android:textSize="18sp"
                       android:paddingTop="8dp"
                       android:paddingLeft="8dp"
                       android:paddingBottom="8dp"/>

                   <TextView
                       android:id="@+id/tv_upload_speed"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:layout_weight="1"
                       android:paddingRight="8dp"
                       android:textColor="@color/textColorBlack"
                       android:paddingBottom="8dp"/>


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/viewColor"/>


           </LinearLayout>





       </LinearLayout>




   </ScrollView>



</LinearLayout>
